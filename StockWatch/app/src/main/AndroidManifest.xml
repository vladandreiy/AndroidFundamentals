<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stockwatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StockWatch">
        <activity
            android:name=".Login.LogInActivity"
            android:theme="@style/Theme.Stocks.NoActionBar"/>
        <activity
            android:name=".Login.SignUpActivity"
            android:theme="@style/Theme.Stocks.NoActionBar" />
        <activity android:name=".SplashScreen"
            android:theme="@style/Theme.Stocks.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddStockPortfolioActivity" />
        <activity android:name=".DisplayStockActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Stocks" />
    </application>

</manifest>